<Window x:Class="WpfApp1.RecipeListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Receptlista" Height="450" Width="500">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header med användarnamn och UserDetails-knapp -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <TextBlock Text="{Binding CurrentUsername}" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button Content="User Details" Width="100" Command="{Binding OpenUserDetailsCommand}"/>
        </StackPanel>

        <!-- ListBox med recept -->
        <ListBox Grid.Row="1"
                 ItemsSource="{Binding Recipes}"
                 SelectedItem="{Binding SelectedRecipe}"
                 DisplayMemberPath="Name"
                 Margin="0,0,0,10"/>

        <!-- Knappar längst ner -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">

            <Button Content="Add Recipe"
                    Width="100"
                    Command="{Binding AddRecipeCommand}"
                    Margin="0,0,10,0"/>

            <Button Content="Remove"
                    Width="100"
                    Command="{Binding RemoveRecipeCommand}"
                    Margin="0,0,10,0"/>

            <Button Content="Details"
                    Width="100"
                    Command="{Binding OpenRecipeDetailsCommand}"
                    Margin="0,0,10,0"/>

            <Button Content="Sign Out"
                    Width="100"
                    Click="SignOut_Click"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="WpfApp1.RecipeDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Details" Height="400" Width="350">
    <Grid Margin="15">
        <StackPanel>

            <TextBlock Text="Namn:"/>
            <TextBox Text="{Binding Name}" IsReadOnly="{Binding IsReadOnly}" Margin="0,0,0,10"/>

            <TextBlock Text="Beskrivning:"/>
            <TextBox Text="{Binding Description}" IsReadOnly="{Binding IsReadOnly}" Margin="0,0,0,10"/>

            <TextBlock Text="Ingredienser:"/>
            <TextBox Text="{Binding Ingredients}" AcceptsReturn="True" Height="80" IsReadOnly="{Binding IsReadOnly}" Margin="0,0,0,10"/>

            <TextBlock Text="Tid (minuter):"/>
            <TextBox Text="{Binding Time}" IsReadOnly="{Binding IsReadOnly}" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Edit" Width="80" Margin="0,0,10,0" Command="{Binding EditCommand}" />
                <Button Content="Save" Width="80" Margin="0,0,10,0" Command="{Binding SaveCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
                <Button Content="Cancel" Width="80" Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
            </StackPanel>

            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,10,0,0" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>

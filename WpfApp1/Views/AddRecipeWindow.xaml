<Window x:Class="WpfApp1.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lägg till recept" Height="400" Width="350">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Namn:"/>
            <TextBox Text="{Binding Name}" Margin="0,0,0,10"/>

            <TextBlock Text="Beskrivning:"/>
            <TextBox Text="{Binding Description}" Margin="0,0,0,10"/>

            <TextBlock Text="Ingredienser:"/>
            <TextBox Text="{Binding Ingredients}" AcceptsReturn="True" Height="80" Margin="0,0,0,10"/>

            <TextBlock Text="Tid (minuter):"/>
            <TextBox Text="{Binding Time}" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Spara"
                        Command="{Binding SaveCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Width="100"
                        Margin="0,0,10,0"/>
                <Button Content="Cancel"
                        Width="100"
                        Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CookMaster - Login" Height="280" Width="360">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="CookMaster" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <TextBlock Text="Användarnamn" />
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Width="240"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock Text="Lösenord" />
            <PasswordBox x:Name="PwdBox" Width="240" PasswordChanged="PwdBox_PasswordChanged"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,15,0,0">
            <TextBlock Text="{Binding messageOnlogin}" Foreground="Red" Margin="0,0,0,8" TextAlignment="Center"/>
            <Button Content="Sign In" Width="120" Command="{Binding SignInCommand}"/>
        </StackPanel>
        <Button Content="Register" Width="120" Margin="100,70,100,-9" Click="Register_Click" Grid.Row="3"/>

    </Grid>
</Window>